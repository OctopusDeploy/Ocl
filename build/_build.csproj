<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <NoWarn>CS0649;CS0169</NoWarn>
    <NukeRootDirectory>..</NukeRootDirectory>
    <NukeScriptDirectory>..</NukeScriptDirectory>
    <NukeTelemetryVersion>1</NukeTelemetryVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Nuke.Common" Version="8.1.0" />
    <PackageReference Include="Octopus.OctoVersion.Tool" Version="0.3.403" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\.gitignore">
      <Link>config\.gitignore</Link>
    </Content>
    <Content Include="..\octoversion.json">
      <Link>config\octoversion.json</Link>
    </Content>
  </ItemGroup>

</Project>
